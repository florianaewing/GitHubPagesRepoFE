<!DOCTYPE html>
<html>

<!-- HTML -->
<table id = "myTable" style="border: 10px solid red; font-size: 20px; font-weight: bold">
<tr id = "row1" style = "color: blue" >
<td id = "1.1" style = "border: 2px solid black">Row 1 Col 1</td>
<td id = "1.2" style = "border: 2px solid black">Row 1 Col 2</td>
</tr>
</table>

<!-- Buttons -->
<br><br><button type="submit" onclick = "changeTextColor()">Color</button>
<br><br><button type="submit" onclick = "changeTextLeft()">Left Color</button>
<br><br><button type="submit" onclick = "changeTextRight()">Right Color</button>
<br><br><button type="submit" onclick = "changeTableBorder()">Table</button>
<script>

// Functions

// Changes text color from blue to green and back again
function changeTextColor(){
var textcolor = document.getElementById("row1").style.color;
if (textcolor== "green"){textcolor = "blue";}
else{textcolor = "green";}
document.getElementById("row1").style.color = textcolor;
}

// Changes the text color on the left only from blue to green
// and back again
function changeTextLeft(){
var textcolor = document.getElementById("1.1").style.color;
if (textcolor== "green"){textcolor = "blue";}
else{textcolor = "green";}
document.getElementById("1.1").style.color = textcolor;
}

// Changes the text color on the right only from blue to purple
// and back again
function changeTextRight(){
var textcolor = document.getElementById("1.2").style.color;
if (textcolor== "purple"){textcolor = "blue";}
else{textcolor = "purple";}
document.getElementById("1.2").style.color = textcolor;
}

//Changes the border of "myTable" from 10px solid red to 20px
//solid green and back again
function changeTableBorder(){
var table_n = document.getElementById("myTable").style.border;
if (table_n== "20px solid green"){table_n = "10px solid red";}
else{table_n = "20px solid green";}
document.getElementById("myTable").style.border = table_n;
}
/script>
</body>
</html>
